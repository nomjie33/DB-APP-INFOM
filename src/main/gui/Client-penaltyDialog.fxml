<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: white; -fx-border-color: #FC7222; -fx-border-width: 2;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Client_penaltyDialogController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <ImageView fx:id="logo" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@assets/OnHoldLogo.png" />
                    </image>
                    <HBox.margin>
                        <Insets right="15.0" />
                    </HBox.margin>
                </ImageView>
                <VBox alignment="TOP_LEFT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #FC7222;" text="Action Required" />
                        <Label prefWidth="250.0" style="-fx-font-size: 13px;" text="You have unpaid penalties. You cannot rent a new vehicle until these are resolved." wrapText="true">
                            <font>
                                <Font size="9.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <children>
                <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" prefHeight="30.0" prefWidth="100.0" styleClass="cancel-button" text="Close" />
                <Button fx:id="resolveButton" mnemonicParsing="false" onAction="#handleResolve" prefHeight="30.0" prefWidth="150.0" styleClass="confirm-button" text="Resolve Now" />
            </children>
        </HBox>
    </children>
</AnchorPane>