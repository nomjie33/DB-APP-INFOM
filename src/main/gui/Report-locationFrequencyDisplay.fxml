<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Report_locationFrequencyController">
    <children>
        <Label layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="Location Frequency Report" />
        <Label fx:id="subHeaderLabel" layoutX="38.0" layoutY="100.0" style="-fx-font-size: 16px;" text="Here is the generated report:" />

        <Button fx:id="backButton" layoutX="575.0" layoutY="90.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="40.0" prefWidth="100.0" styleClass="cancel-button" text="Back" />
        <Button fx:id="exportButton" layoutX="690.0" layoutY="90.0" mnemonicParsing="false" onAction="#handleExportToPDF" prefHeight="40.0" prefWidth="100.0" styleClass="confirm-button" text="Export PDF" />

        <TableView fx:id="reportTable" AnchorPane.topAnchor="150.0"
                   AnchorPane.leftAnchor="38.0"
                   AnchorPane.rightAnchor="38.0"
                   AnchorPane.bottomAnchor="38.0" styleClass="transactions-table">
            <columns>
                <TableColumn fx:id="colLocationName" prefWidth="170.0" text="Location Name" />
                <TableColumn fx:id="colRentals" prefWidth="100.0" text="Rentals" />
                <TableColumn fx:id="colAvgDuration" prefWidth="120.0" text="Avg Duration (Days)" />
                <TableColumn fx:id="colTotalRevenue" prefWidth="130.0" text="Total Revenue" />
                <TableColumn fx:id="colTopVehicle" prefWidth="130.0" text="Top Vehicle Type" />
                <TableColumn fx:id="colDeployments" prefWidth="95.0" text="Deployments" />
            </columns>
        </TableView>
    </children>
</AnchorPane>