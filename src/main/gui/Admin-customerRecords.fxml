                <TableColumn fx:id="contactColumn" prefWidth="100.0" text="Contact" />
                <TableColumn fx:id="addressColumn" prefWidth="140.0" text="Address" />
                <TableColumn fx:id="emailColumn" prefWidth="140.0" text="Email" />
                <TableColumn fx:id="editColumn" prefWidth="50.0" text="Edit" />
                <TableColumn fx:id="actionColumn" prefWidth="90.0" text="Status" />
            </columns>

        </TableView>

    </children>
</AnchorPane>
