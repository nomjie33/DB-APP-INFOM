<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Admin_customerRecordsController">
    <children>
        <Label layoutX="38.0" layoutY="35.0" style="-fx-font-size: 20px;" text="Section" />
        <Label layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="Customer list" />

        <Label layoutX="38.0" layoutY="114.0" styleClass="sidebar-title" text="Show:" />
        <ComboBox fx:id="statusFilterComboBox" layoutX="93.0" layoutY="104.0" prefWidth="150.0" styleClass="form-text-field" />

