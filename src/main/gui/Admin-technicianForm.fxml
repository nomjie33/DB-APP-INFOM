<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Admin_technicianFormController">
    <children>
        <Label layoutX="38.0" layoutY="35.0" style="-fx-font-size: 20px;" text="Section" />
        <Label fx:id="formHeaderLabel" layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #FC7222;" text="Add a Technician" />

        <AnchorPane layoutX="38.0" layoutY="120.0" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>

                <Label layoutX="30.0" layoutY="30.0" styleClass="sidebar-title" text="Technician ID" />
                <TextField fx:id="idField" layoutX="30.0" layoutY="55.0" prefWidth="250.0" promptText="TECH-XXXX" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="110.0" styleClass="sidebar-title" text="Last Name" />
                <TextField fx:id="lastNameField" layoutX="30.0" layoutY="135.0" prefWidth="250.0" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="110.0" styleClass="sidebar-title" text="First Name" />
                <TextField fx:id="firstNameField" layoutX="300.0" layoutY="135.0" prefWidth="250.0" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="190.0" styleClass="sidebar-title" text="Specialization ID" />
                <TextField fx:id="specIdField" layoutX="30.0" layoutY="215.0" prefWidth="250.0" promptText="SPC-XXX" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="190.0" styleClass="sidebar-title" text="Rate" />
                <TextField fx:id="rateField" layoutX="300.0" layoutY="215.0" prefWidth="250.0" promptText="0.00" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="270.0" styleClass="sidebar-title" text="Contact Number" />
                <TextField fx:id="contactField" layoutX="30.0" layoutY="295.0" prefWidth="250.0" styleClass="form-text-field" />

                <Button layoutX="430.0" layoutY="380.0" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" styleClass="cancel-button" text="Cancel" />
                <Button layoutX="290.0" layoutY="380.0" onAction="#handleSave" prefHeight="40.0" prefWidth="120.0" styleClass="confirm-button" text="Confirm" />

            </children>
        </AnchorPane>
    </children>
</AnchorPane>