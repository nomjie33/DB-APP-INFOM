<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Client_rentController">
    <children>

        <Label layoutX="38.0" layoutY="35.0" style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Rent a Vehicle" />

        <Label layoutX="38.0" layoutY="80.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="1. Choose a Vehicle Type:" />

        <Label layoutX="38.0" layoutY="300.0" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="2. Schedule a Reservation / Pick-Up:" />

        <HBox layoutX="38.0" layoutY="120.0" spacing="12.0">
            <Pane fx:id="scooterPane" onMouseClicked="#handleTypeSelected" prefHeight="150.0" prefWidth="200.0" styleClass="vehicle-pane">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                    <Label layoutX="14.0" layoutY="110.0" prefHeight="26.0" prefWidth="78.0" text="E-scooter" />
                </children>
            </Pane>
            <Pane fx:id="bikePane" onMouseClicked="#handleTypeSelected" prefHeight="150.0" prefWidth="200.0" styleClass="vehicle-pane">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                    <Label layoutX="14.0" layoutY="110.0" prefHeight="26.0" prefWidth="78.0" text="E-Bike" />
                </children>
            </Pane>
            <Pane fx:id="trikePane" onMouseClicked="#handleTypeSelected" prefHeight="150.0" prefWidth="200.0" styleClass="vehicle-pane">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                    <Label layoutX="14.0" layoutY="110.0" prefHeight="26.0" prefWidth="78.0" text="E-Trike" />
                </children>
            </Pane>
        </HBox>

        <VBox fx:id="rentalFormPane" layoutX="38.0" layoutY="290.0" spacing="15.0" visible="false">
            <children>
                <Label prefHeight="26.0" prefWidth="316.0" style="-fx-font-weight: bold;" text="2. PLEASE FILL UP THE FOLLOWING:">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <HBox spacing="10.0">
                    <VBox>
                        <Label text="Start Date" />
                        <DatePicker fx:id="datePicker" prefWidth="120.0" />
                    </VBox>
                    <VBox>
                        <Label text="Return Date" />
                        <DatePicker fx:id="returnDatePicker" prefWidth="120.0" />
                    </VBox>

                    <VBox>
                        <Label text="Location" />
                        <ComboBox fx:id="locationComboBox" prefWidth="120.0" promptText="Select Location" />
                    </VBox>

                    <VBox>
                        <Label text="Start Time" />
                        <TextField fx:id="startTimeField" prefWidth="100.0" promptText="8:00 AM" styleClass="form-text-field" />
                    </VBox>
                    <VBox>
                        <Label text="End Time" />
                        <TextField fx:id="endTimeField" prefWidth="100.0" promptText="5:00 PM" styleClass="form-text-field" />
                    </VBox>
                </HBox>

                <Label fx:id="errorLabel" style="-fx-text-fill: red;" text="Error message here" visible="false" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#handleConfirmRent" styleClass="confirm-button" text="Confirm Rent" />
                    <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
                </HBox>

            </children>
        </VBox>

        <VBox fx:id="schedulePane" layoutX="38.0" layoutY="340.0" spacing="15.0" visible="true">
            <children>

                <HBox spacing="20.0">
                    <VBox spacing="5.0">
                        <children>
                            <Label text="Date" />
                            <DatePicker fx:id="scheduleDatePicker" prefWidth="180.0" />
                        </children>
                    </VBox>

                    <VBox spacing="5.0">
                        <children>
                            <Label text="Time" />
                            <TextField fx:id="scheduleTimeField" prefWidth="150.0" promptText="e.g. 02:00 PM" styleClass="form-text-field" />
                        </children>
                    </VBox>
                </HBox>

            </children>
        </VBox>

        <HBox layoutX="38.0" layoutY="570.0" spacing="10.0">
            <children>
                <Button fx:id="scheduleConfirmButton" onAction="#handleConfirmSchedule" prefHeight="40.0" prefWidth="150.0" styleClass="confirm-button" text="Confirm Schedule" />
                <Button fx:id="scheduleCancelButton" onAction="#handleCancelSchedule" prefHeight="40.0" prefWidth="100.0" styleClass="cancel-button" text="Cancel" />
            </children>
        </HBox>

        <Pane layoutX="38.0" layoutY="465.0" prefHeight="90.0" prefWidth="420.0" styleClass="heads-up-pane">
            <children>
                <Label layoutY="28.0" prefWidth="400.0" style="-fx-text-fill: #F99C03;" text="Please note that you may only have one active vehicle reservation at a time. To rent a different vehicle, you must first complete or cancel your current reservation." wrapText="true">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
                <Label layoutY="11.0" style="-fx-font-weight: bold; -fx-text-fill: #F99C03;" text="Heads Up!">
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
            </children>
        </Pane>

    </children>
</AnchorPane>
