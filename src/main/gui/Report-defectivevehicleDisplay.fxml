<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Report_defectiveVehicleDisplayController">
    <children>
        <Label layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="Defective Vehicles Report" />
        <Label fx:id="subHeaderLabel" layoutX="38.0" layoutY="100.0" style="-fx-font-size: 16px;" text="Here is the generated report:" />

        <Button fx:id="backButton" layoutX="575.0" layoutY="90.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="40.0" prefWidth="100.0" styleClass="cancel-button" text="Back" />
        <Button fx:id="exportButton" layoutX="690.0" layoutY="90.0" mnemonicParsing="false" onAction="#handleExportToPDF" prefHeight="40.0" prefWidth="100.0" styleClass="confirm-button" text="Export PDF" />

        <TableView fx:id="reportTable" layoutX="38.0" layoutY="150.0" prefHeight="580.0" prefWidth="747.0" styleClass="transactions-table">
            <columns>
                <TableColumn fx:id="colPlateID" prefWidth="90.0" text="Plate ID" />
                <TableColumn fx:id="colVehicleType" prefWidth="100.0" text="Vehicle Type" />
                <TableColumn fx:id="colTimesMaint" prefWidth="70.0" text="Maint. (Period)" />
                <TableColumn fx:id="colTotalCost" prefWidth="110.0" text="Total Cost" />
                <TableColumn fx:id="colDaysMaint" prefWidth="70.0" text="Days (Maint.)" />
                <TableColumn fx:id="colLastMaint" prefWidth="110.0" text="Last Maint. Date" />
                <TableColumn fx:id="colTotalRentals" prefWidth="90.0" text="Total Rentals" />
                <TableColumn fx:id="colRatio" prefWidth="105.0" text="Cost/Rev Ratio" />
            </columns>
        </TableView>
    </children>
</AnchorPane>