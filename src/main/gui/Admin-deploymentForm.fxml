<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Admin_deploymentFormController">
    <children>
        <Label fx:id="formHeaderLabel" layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="New Deployment" />

        <AnchorPane layoutX="38.0" layoutY="120.0" prefHeight="380.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>

                <Label layoutX="30.0" layoutY="30.0" styleClass="sidebar-title" text="Deployment ID" />
                <TextField fx:id="deploymentIDField" layoutX="30.0" layoutY="55.0" prefWidth="250.0" promptText="DEP-XXXX" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="30.0" styleClass="sidebar-title" text="Plate ID" />
                <ComboBox fx:id="plateComboBox" layoutX="300.0" layoutY="55.0" prefWidth="250.0" promptText="Select Vehicle Plate" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="110.0" styleClass="sidebar-title" text="Location ID" />
                <ComboBox fx:id="locationComboBox" layoutX="30.0" layoutY="135.0" prefWidth="250.0" promptText="Select Location" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="190.0" styleClass="sidebar-title" text="Start Date" />
                <DatePicker fx:id="startDatePicker" layoutX="30.0" layoutY="215.0" prefWidth="250.0" styleClass="form-text-field" />

                <Label fx:id="endDateLabel" layoutX="300.0" layoutY="190.0" styleClass="sidebar-title" text="End Date" />
                <DatePicker fx:id="endDatePicker" layoutX="300.0" layoutY="215.0" prefWidth="250.0" promptText="Optional" styleClass="form-text-field" />


                <Button layoutX="450.0" layoutY="310.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" styleClass="cancel-button" text="Cancel" />
                <Button layoutX="320.0" layoutY="310.0" mnemonicParsing="false" onAction="#handleSave" prefHeight="40.0" prefWidth="120.0" styleClass="confirm-button" text="Save Record" />

            </children>
        </AnchorPane>
    </children>
</AnchorPane>