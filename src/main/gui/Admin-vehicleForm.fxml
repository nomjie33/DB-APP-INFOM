<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Admin_vehicleFormController">
    <children>
        <Label fx:id="formTitleLabel" layoutX="38.0" layoutY="35.0" style="-fx-font-size: 20px;" text="Section" />
        <Label fx:id="formHeaderLabel" layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="New Vehicle" />

        <AnchorPane layoutX="38.0" layoutY="120.0" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>

                <Label layoutX="30.0" layoutY="30.0" styleClass="sidebar-title" text="Plate ID" />
                <TextField fx:id="plateField" layoutX="30.0" layoutY="55.0" prefWidth="250.0" promptText="ABC-123" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="30.0" styleClass="sidebar-title" text="Vehicle Type" />
                <TextField fx:id="typeField" layoutX="300.0" layoutY="55.0" prefWidth="250.0" promptText="e.g. E-Scooter" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="110.0" styleClass="sidebar-title" text="Rental Price / Day" />
                <TextField fx:id="priceField" layoutX="30.0" layoutY="135.0" prefWidth="250.0" promptText="0.00" styleClass="form-text-field" />

                <Button layoutX="430.0" layoutY="330.0" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" styleClass="cancel-button" text="Cancel" />
                <Button layoutX="290.0" layoutY="330.0" onAction="#handleSave" prefHeight="40.0" prefWidth="120.0" styleClass="confirm-button" text="Save Record" />

            </children>
        </AnchorPane>
    </children>
</AnchorPane>