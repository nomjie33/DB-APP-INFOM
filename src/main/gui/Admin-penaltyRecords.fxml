                <TableColumn fx:id="dateIssuedColumn" prefWidth="90.0" text="Date" />

                <TableColumn fx:id="editColumn" prefWidth="60.0" text="Edit" />
                <TableColumn fx:id="actionColumn" prefWidth="90.0" text="Action" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

    </children>
</AnchorPane>