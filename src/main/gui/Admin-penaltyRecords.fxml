        <Label layoutX="240.0" layoutY="114.0" styleClass="sidebar-title" text="Payment:" />
        <ComboBox fx:id="paymentFilterComboBox" layoutX="315.0" layoutY="104.0" prefWidth="130.0" styleClass="form-text-field" />

