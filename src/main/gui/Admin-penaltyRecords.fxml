<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Admin_penaltyRecordsController">
    <children>
        <Label layoutX="38.0" layoutY="35.0" style="-fx-font-size: 20px;" text="Section" />
        <Label layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="Penalty list" />

        <Label layoutX="38.0" layoutY="114.0" styleClass="sidebar-title" text="Show:" />
        <ComboBox fx:id="statusFilterComboBox" layoutX="93.0" layoutY="104.0" prefWidth="150.0" styleClass="form-text-field" />

        <Label fx:id="penaltyCountLabel" layoutX="256.0" layoutY="113.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="(0) PENALTIES:" />

        <Button fx:id="addButton" layoutX="690.0" layoutY="100.0" onAction="#handleAddPenalty" prefHeight="31.0" prefWidth="72.0" styleClass="add-button" text="+" />

        <TableView fx:id="penaltyTable" AnchorPane.topAnchor="150.0"
                   AnchorPane.leftAnchor="38.0"
                   AnchorPane.rightAnchor="38.0"
                   AnchorPane.bottomAnchor="38.0"
                   styleClass="transactions-table">
            <columns>
                <TableColumn fx:id="penaltyIDColumn" prefWidth="110.0" text="Penalty ID" />
                <TableColumn fx:id="rentalIDColumn" prefWidth="110.0" text="Rental ID" />
                <TableColumn fx:id="maintenanceIDColumn" prefWidth="110.0" text="Maintenance ID" />
                <TableColumn fx:id="totalPenaltyColumn" prefWidth="90.0" text="Total" />

                <TableColumn fx:id="penaltyStatusColumn" prefWidth="90.0" text="Paid?" />

                <TableColumn fx:id="statusColumn" prefWidth="90.0" text="Record" />
                <TableColumn fx:id="dateIssuedColumn" prefWidth="100.0" text="Date Issued" />
                <TableColumn fx:id="editColumn" prefWidth="50.0" text="Edit" />
                <TableColumn fx:id="actionColumn" prefWidth="90.0" text="Action" />
            </columns>

            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>

        </TableView>

    </children>
</AnchorPane>