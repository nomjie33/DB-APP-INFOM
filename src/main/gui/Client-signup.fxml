<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Client_signupController">
    <VBox alignment="TOP_CENTER" layoutX="262.0" layoutY="50.0" prefHeight="668.0" prefWidth="500.0" style="-fx-background-color: #fcf8ff; -fx-background-radius: 15;">
        <children>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@assets/logo1_orig.png" />
                </image>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </ImageView>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #FC7222;" text="New user Signup">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>
            <Label style="-fx-text-fill: #33a398;" text="PLEASE FILL UP THE FOLLOWING:" />

            <VBox alignment="CENTER_LEFT" prefWidth="400.0" spacing="10.0">
                <HBox spacing="10.0">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Last Name" />
                        <TextField fx:id="lastNameField" promptText="e.g: Kujo" styleClass="form-text-field" />
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="First Name" />
                        <TextField fx:id="firstNameField" promptText="e.g: Jotaro" styleClass="form-text-field" />
                    </VBox>
                </HBox>

                <VBox>
                    <Label text="Contact Number" />
                    <TextField fx:id="contactNumberField" promptText="e.g: 09887828181" styleClass="form-text-field" />
                </VBox>

                <Label style="-fx-font-weight: bold;" text="Address" />

                <HBox spacing="10.0">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="City" />
                        <ComboBox fx:id="cityComboBox" prefWidth="400.0" promptText="Select City" styleClass="form-text-field" />
                    </VBox>
                    <VBox HBox.hgrow="ALWAYS">
                        <Label text="Barangay" />
                        <ComboBox fx:id="barangayComboBox" disable="true" prefWidth="400.0" promptText="Select City First" styleClass="form-text-field" />
                    </VBox>
                </HBox>
                <VBox>
                    <Label text="Street / House No." />
                    <TextField fx:id="streetField" promptText="e.g. 123 Main St." styleClass="form-text-field" />
                </VBox>
                <VBox>
                    <Label text="Email Address" />
                    <TextField fx:id="emailField" promptText="Email Address" styleClass="form-text-field" />
                </VBox>

                <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" />

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Button fx:id="confirmButton" onAction="#handleConfirmSignup" prefHeight="40.0" prefWidth="150.0" styleClass="confirm-button" text="Confirm" />
                    <Button fx:id="cancelButton" onAction="#handleCancelSignup" prefHeight="40.0" prefWidth="100.0" styleClass="cancel-button" text="Cancel" />
                </HBox>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </VBox>
        </children>
    </VBox>
</AnchorPane>