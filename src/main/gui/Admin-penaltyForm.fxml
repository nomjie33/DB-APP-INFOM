<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="771.0" prefWidth="823.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.Admin_penaltyFormController">
    <children>
        <Label fx:id="formHeaderLabel" layoutX="38.0" layoutY="60.0" style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #33a398;" text="New Penalty" />

        <AnchorPane layoutX="38.0" layoutY="120.0" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>

                <Label layoutX="30.0" layoutY="30.0" styleClass="sidebar-title" text="Penalty ID" />
                <TextField fx:id="idField" layoutX="30.0" layoutY="55.0" prefWidth="250.0" promptText="PEN-XXXX" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="30.0" styleClass="sidebar-title" text="Rental ID" />
                <ComboBox fx:id="rentalComboBox" layoutX="300.0" layoutY="55.0" prefWidth="250.0" promptText="Select Rental Transaction" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="110.0" styleClass="sidebar-title" text="Total Penalty Amount" />
                <TextField fx:id="totalPenaltyField" layoutX="30.0" layoutY="135.0" prefWidth="250.0" promptText="e.g. 500.00" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="110.0" styleClass="sidebar-title" text="Maintenance ID" />
                <ComboBox fx:id="maintenanceComboBox" layoutX="300.0" layoutY="135.0" prefWidth="250.0" promptText="Select Maintenance Record (Optional)" styleClass="form-text-field" />

                <Label layoutX="30.0" layoutY="190.0" styleClass="sidebar-title" text="Date Issued" />
                <DatePicker fx:id="dateIssuedPicker" layoutX="30.0" layoutY="215.0" prefWidth="250.0" styleClass="form-text-field" />

                <Label layoutX="300.0" layoutY="190.0" styleClass="sidebar-title" text="Payment Status" />
                <ComboBox fx:id="statusComboBox" layoutX="300.0" layoutY="215.0" prefWidth="250.0" styleClass="form-text-field" />

                <Button layoutX="430.0" layoutY="430.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="120.0" styleClass="cancel-button" text="Cancel" />
                <Button layoutX="290.0" layoutY="430.0" mnemonicParsing="false" onAction="#handleSave" prefHeight="40.0" prefWidth="120.0" styleClass="confirm-button" text="Save Record" />

            </children>
        </AnchorPane>
    </children>
</AnchorPane>